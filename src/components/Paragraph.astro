---
import Google from './Google.astro';
import ShopPromo from './ShopPromo.astro';

interface Props {
  title?: string;
  ad?: 'google' | 'shop';
}

const { title, ad } = Astro.props;
---

<section class="mb-4">
  {title && <h2 class="text-3xl font-semibold text-gray-800 mb-2">{title}</h2>}
  <p class="text-xl text-gray-700 mb-4">
    <slot />
  </p>
  {ad === 'shop' && <ShopPromo />}
  {ad === 'google' && <Google />}
</section>
