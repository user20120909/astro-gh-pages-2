---
import type { GetStaticPaths } from 'astro';
import { extractSections } from '../../util/markdown';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Paragraph from '../../components/Paragraph.astro';
import TitleBlock from '../../components/TitleBlock.astro';

import { parseDate } from '../../util/date';
import { getPs } from '../../util/post';
import Share from '../../components/Share.tsx';
import Button from '../../components/Button';

export const getStaticPaths = (async () => {
  const ps = await getPs();
  const tuples = ps.map((p, i) => ({
    p,
    prev: ps[(i + 1 + ps.length) % ps.length],
  }));
  return tuples.map(({ p, prev }) => ({
    params: { slug: p.slug },
    props: {
      slug: p.slug,
      body: p.body,
      ...p.data,
      prev: { slug: prev.slug, body: prev.body, ...prev.data },
    },
  }));
}) satisfies GetStaticPaths;

const { title, image, body, pubDate, slug, prev, author } = Astro.props;

const parsedBody = extractSections(body);
const parsedPrevBody = extractSections(prev.body);
---

<BaseLayout title={author ? `fenpoost - ${title}` : title} image={image}>
  <TitleBlock
    title={title}
    image={image}
    author={author}
    pubDate={parseDate(pubDate)}
    slug={slug}
  />
  <Share text={title} client:load />
  {
    parsedBody.map((section, index) => (
      <Paragraph
        title={section.title}
        ad={index % 6 === 0 ? 'shop' : index % 6 == 3 ? 'shop-img' : undefined}
        set:html={section.content}
      />
    ))
  }
  <Paragraph title="maak je eige poost!!">
    je kan nu ook zelf een poost make. als ik de poost leuk vint zet ik op de
    webshite en meschien zeilfs op mij instagarm ❤️
    <Button text="maak je eige poost" href="/eige-poost" />
  </Paragraph>
  <TitleBlock
    title={prev.title}
    image={prev.image}
    author={prev.author}
    pubDate={parseDate(prev.pubDate)}
    slug={prev.slug}
  />
  <Share text={prev.title} client:load />
  {
    parsedPrevBody.map((section, index) => (
      <Paragraph
        title={section.title}
        ad={index % 6 === 0 ? 'shop' : index % 6 == 3 ? 'shop-img' : undefined}
        set:html={section.content}
      />
    ))
  }
  <Paragraph title="maak je eige poost!!">
    je kan nu ook zelf een poost make. als ik de poost leuk vint zet ik op de
    webshite en meschien zeilfs op mij instagarm ❤️
    <Button text="maak je eige poost" href="/eige-poost" />
  </Paragraph>
</BaseLayout>
